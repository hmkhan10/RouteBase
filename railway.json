{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "Route Base/backend/**"
        ]
    },
    "deploy": {
        "startCommand": "python manage.py migrate && gunicorn routebase.wsgi:application",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "healthcheckPath": "/api/merchants/",
        "root": "Route Base/backend"
    }
}